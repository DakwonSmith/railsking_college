<%= form_for :session, url: session_path do |form| %>
  <div class="name-field">
    <%= form.label :username %>
    <%= form.text_field :username, type: 'username' %>
  </div>


  <div class="password-field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="submit-field">
    <%= form.submit %>
  </div>

  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <p>Don't an account?<%= link_to t( ".sign_up"), sign_up_path %></p>
    <% end %>
    <%= button_to t(".forgot_password"), new_password_path %>
  </div>
<% end %>
