<h1>Student#sign_up</h1>

<%= form_for :user, class: "signupForm" do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: "shortInput" %> <br />

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: "shortInput" %> <br />

  <%= f.label :email, "Email Address" %>
  <%= f.text_field :email, class: "shortInput" %> <br />

  <%= f.label :password %>
  <%= f.password_field :password, class: "shortInput" %> <br />

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation, class: "shortInput" %> <br />

  <%= f.submit "Create account", href: '/student/log_in', class: "button createAccount" %>

<% end %>

<p>Have an account? <a href='/student/log_in'>Log in</a></p>